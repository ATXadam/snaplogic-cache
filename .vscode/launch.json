{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch App (local-only)",
      "cwd": "${workspaceFolder}",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "runtimeExecutable": "yarn",
      "runtimeArgs": [
        "start",
        "--local=true"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch App (Online)",
      "cwd": "${workspaceFolder}",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "runtimeExecutable": "yarn",
      "runtimeArgs": [
        "start"
      ]
    }
  ]
}
