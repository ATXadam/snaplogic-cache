{
  "env": {
    "node": true
  },
  "extends": [
    "./node_modules/gts",
    "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": [
      "./tsconfig.json"
    ]
  },
  "plugins": [
    "@typescript-eslint/eslint-plugin",
    "eslint-plugin-tsdoc"
  ],
  "rules": {
    "valid-jsdoc": "off",
    "tsdoc/syntax": "warn",
    "max-len": [
      "error",
      {
        "code": 120
      }
    ],
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true
      }
    ]
  },
  "ignorePatterns": [
    "dist/**/*.js"
  ]
}
